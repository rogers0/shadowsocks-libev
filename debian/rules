#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

# Security Hardening
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/buildflags.mk

override_dh_auto_install:
	find src/ -name '*.la' -delete
	dh_auto_install

override_dh_autoreconf:
	# autoreconf script conplains without the two folders
	mkdir libcork libipset
	touch libcork/Makefile.in libipset/Makefile.in
	dh_autoreconf
	rm -rf libcork libipset

override_dh_auto_configure:
	# Whether to have stack-protector is decided by dpkg-buildflags.
	# So --disable-ssp here should be safe. See Bug#829498
	dh_auto_configure -- \
		--enable-shared \
		--enable-system-shared-lib \
		--disable-ssp

%:
	dh $@
